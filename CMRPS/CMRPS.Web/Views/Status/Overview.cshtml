@model List<CMRPS.Web.Models.ComputerModel>

<h2>Overview</h2>
<hr />
@for (int i = 0; i < Model.Count(); i += 4)
{
    <div class="row">
        @foreach (var item in Model.Skip(i).Take(4))
        {
            <div id="item-id-@item.Id" class="col-md-3">



                <div class="panel @(item.Status ? "panel-success" : "panel-danger")">
                    <div class="panel-heading">
                        <h3 class="panel-title"><img src="@item.Type.ImagePath" width="25" height="25" /><b> @item.Name</b></h3>
                    </div>
                    <div class="panel-body">
                            <div class="col-md-12 glyphicon-align-center">
                                <span class="btn btn-xs btn-info" title="Show details"><span class="glyphicon glyphicon-info-sign"></span></span>
                                <span class="btn btn-xs btn-success" title="Start"><span class="glyphicon glyphicon-play"></span></span>
                                <span class="btn btn-xs btn-warning" title="Restart"><span class="glyphicon glyphicon-refresh"></span></span>
                                <span class="btn btn-xs btn-danger" title="Shutdown"><span class="glyphicon glyphicon-stop"></span></span>
                            </div>
                    </div>
                </div>
            </div>
        }
    </div>
}



@foreach (var item in Model)
{
    <script>
        var textColor = '@item.Color.ColorText.Replace("#", "")';
        var labelColor = '@item.Color.ColorLabel.Replace("#", "")';

        $('#color-label-' + @item.Id).css({
            "color": '#' + textColor,
            "background-color": '#' + labelColor
        });
    </script>
}