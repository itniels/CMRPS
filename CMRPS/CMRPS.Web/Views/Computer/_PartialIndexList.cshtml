@using CMRPS.Web.Models
@model IEnumerable<CMRPS.Web.Models.ComputerModel>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Hostname
        </th>
        <th>
            Status
        </th>
        <th>
            IP
        </th>
        <th>
            MAC
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Type.ImagePath" width="25" height="25" /> @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hostname)
            </td>
            <td>
                <span class="label @(item.Status ? "label-success":"label-danger")">
                    @(item.Status ? "ONLINE" : "OFFLINE")
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MAC)
            </td>
            <td>
                <div class="pull-right">
                <button class="btn btn-xs btn-info" onclick="showDetailsModal(@item.Id, '@Url.Action("Details")');" data-toggle="modal" data-target="#myModal">Details</button>
                    <button class="btn btn-xs btn-warning" onclick="location.href='@Url.Action("Edit", "Computer", new {id = item.Id})'">Edit</button>
                    <button class="btn btn-xs btn-danger" onclick="location.href='@Url.Action("Delete", "Computer", new {id = item.Id})'">Delete</button>
                </div>
            </td>
        </tr>
    }

</table>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="modal-body" class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>