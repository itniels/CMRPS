@using CMRPS.Web.Models
@model CMRPS.Web.ModelsView.IndexComputerViewModels

@{
    ViewBag.Title = "Computers";
}

<h2>Computers</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <button class="btn btn-xs btn-success" onclick="location.href = '@Url.Action("Create", "Computer")'">Create Single</button>
        <button class="btn btn-xs btn-success" onclick="location.href='@Url.Action("CreateMultiple", "Computer")'">Create Multiple</button>
        <button class="btn btn-xs btn-warning">Import (TODO)</button>
        <button class="btn btn-xs btn-warning">Export (TODO)</button>
    </div>
    <div class="col-md-4">
        <div class="pull-right">
            <input type="text" style="height: 30px;" placeholder="Search... (TODO)" />
            <button class="btn btn-xs btn-info">Go</button>
        </div>
    </div>
</div>
<br/>
@if (Model.Computers.Count == 0)
{
    <div class="no-items-found">No computers created yet!</div>
}
else
{
    @Html.Partial("_PartialIndexList", Model.Computers)
}

