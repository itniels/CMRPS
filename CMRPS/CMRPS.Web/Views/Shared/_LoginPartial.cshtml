@using System.Activities.Statements
@using System.Security.Claims
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        var name = "";

        try
        {
            name = ((System.Security.Claims.ClaimsIdentity)User.Identity).FindFirst("Firstname").Value;
        }
        catch (Exception)
        {

        }

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Admin", "Index", "Admin", null, htmlAttributes: new { title = "Administration area for site settings." })</li>
            <li>
                @Html.ActionLink("Hello " + name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Your profile"})
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" title="Log off">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
