@model CMRPS.Web.Models.LocationModel
    
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3">
                Name:
            </div>
            <div id="color-label" class="col-md-9">
                @Model.Location
            </div>
        </div>
    </div>
</div>
<hr />

<h4>Used by:</h4>

@if (@Model.Computers != null && @Model.Computers.Count > 0)
{
    foreach (var item in @Model.Computers)
    {
        <div class="row">
            <div class="col-md-4">
                @item.Name
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="no-items-found">No computers found..</div>
    </div>
}