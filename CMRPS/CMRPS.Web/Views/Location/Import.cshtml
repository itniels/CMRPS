@model CMRPS.Web.ModelsView.ImportViewModel

@{
    ViewBag.Title = "Import";
}

@Html.ActionLink("◄ Go Back", "Index")

<h2>Import</h2>

<p>Please select an Excel file to upload and import.</p>
<hr />
<br />
<div class="error-text">@Html.ValidationSummary()</div>

@using (Html.BeginForm("Import", "Location", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.File, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.File, new {type = "file", name = "image", htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.File, "", new {@class = "text-danger"})
        </div>
    </div>
    <br/>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>